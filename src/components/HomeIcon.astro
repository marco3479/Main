---
export interface Props {
    className?: string;
}

const { className } = Astro.props;
---
<script type='text/javascript' is:inline>
    function openHome() {
        const home = document.getElementById('home');
        const icons = document.getElementsByClassName('section');
        for (let icon of icons) {
            if (!icon.classList.contains('hidden')) {
                icon.classList.add('hidden');
            }
        }
        home.classList.remove('hidden');
    }
</script>
<div onclick='javascript:openHome()' id='homeIcon' class={`${className} text-5xl`}>
    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 256 256" class="icon  highlight">
        <rect width="256" height="256" fill="none"></rect>
