---
import Box from "../components/Box.astro";
import GithubIcon from "../components/GithubIcon.astro";
import LinkIcon from "../components/LinkIcon.astro";
import Layout from "../layouts/Layout.astro";

type projectsType = {
    title: string;
    image: string;
    imageStyles: string;
    role: string;
    about: string;
    github: string;
    website: string;
}[]

const projects: projectsType = [{
    title: 'perignosia.net',
    image: 'assets/PerignosiaLogo2000.png',
    imageStyles: 'object-contain',
    role: 'Knowledge Engineering & Software Engineering',
    about: 'Helped develop a collaborative knowledge management platform. The platform entails a decentralized Web3 application that aims to solve issues of miscommunication, misinformation, absolutism of facts, and decentralization of evidence. The tech stack mainly included Fluree, a decentralized no-SQL data management solution, Next.js, Node.js, and Node.js-embedded Python. Followed an agile project management style.',
    github: '',
    website: ''
}, {
    title: 'sintaxis.io',
    image: 'assets/LogoMark.png',
    imageStyles: 'object-cover',
    role: 'Full-Stack Web Developer',
    about: 'Single-handedly developed the web site/app that manages scheduling of classes at Sintaxis, an online programming academy. Used Next.js as full-stack framework. Developed API for external services, including web workers.',
    github: '',
    website: ''
}]
---

<Layout>
    <div class="relative overflow-y-auto h-full pr-3">
        <h2 class='text-center'>Projects</h2>
        <br/>
        <br/>
        <br/>
        {projects.map((project) => (
            <div class='grid grid-rows-[1fr_max-content] grid-flow-col md:grid-rows-1 md:grid-cols-[1fr_1.5fr] md:grid-flow-row gap-4'>
                <div class='md:h-full'>
                    <a href=''><img class={`${project.imageStyles}  h-60 w-full`} src={project.image}/></a>
                    <br/>
                    <span class='flex flex-row justify-around items-center '>
                        <h3 class='text-center'><a class='anchor' href={project.website}>{project.title}</a></h3>
                        <a href={project.github}><GithubIcon/></a>
                    </span>
                </div>
                <div class='flex flex-col mt-4 md:mt-0 justify-center items-center'>
                    <h3 class='text-center'>{project.role}</h3>
                    <br/>
                    <p>{project.about}</p>
                </div>
            </div>
            <br/>
            <br/>
            <br/>
        ))}

        <br/>
        <br/>
        <br/>
        MyMoringas.com
        <br/>
        <br/>
        Knox & PKnox
    </div>
</Layout>
